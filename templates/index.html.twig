{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<!-- Section de la bannière principale -->
	<section
		class="relative h-[400px] bg-cover bg-center pb-12" style="background-image: url('https://via.placeholder.com/1920x500');">
		<!-- Overlay avec dégradé sombre -->
		<div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-transparent"></div>

		<!-- Contenu centré -->
		<div class="relative container mx-auto h-full flex flex-col justify-center items-center text-center px-4">
			<h1 class="text-5xl md:text-7xl font-extrabold text-white drop-shadow-lg">
				Bienvenue sur MoviesChoice
			</h1>
			<p class="mt-4 max-w-3xl text-xl md:text-2xl font-semibold text-white drop-shadow-md">
				Découvrez les derniers films, séries et émissions TV en un clic !
			</p>
			<!-- Bouton éventuellement visible -->
			{# <a href="#popular-movies" class="mt-8 inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-10 rounded-full shadow-lg transition">
								Voir les films populaires
							</a> #}
		</div>
	</section>

	<!-- Films populaires -->
	<section id="popular-movies" class="mt-12">
		<h2 class="text-3xl font-semibold mb-6">Films Populaires</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
			{% for movie in popularMovies %}
				<div class="bg-gray-800 text-white rounded-lg overflow-hidden">
					<img src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" alt="{{ movie.title }}" class="w-full h-64 object-cover">
					<div class="p-4">
						<h3 class="text-xl font-semibold">{{ movie.title }}</h3>
						<p class="text-sm text-gray-400 mt-2">{{ movie.overview|slice(0, 150) ~ '...' }}</p>
					</div>
				</div>
			{% else %}
				<p>Aucun film trouvé.</p>
			{% endfor %}
		</div>
	</section>

	<!-- Séries populaires -->
	<section id="popular-tv" class="mt-12">
		<h2 class="text-3xl font-semibold mb-6">Séries Populaires</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
			{% for tvShow in popularTvShows %}
				<div class="bg-gray-800 text-white rounded-lg overflow-hidden">
					<img src="https://image.tmdb.org/t/p/w500{{ tvShow.poster_path }}" alt="{{ tvShow.name }}" class="w-full h-64 object-cover">
					<div class="p-4">
						<h3 class="text-xl font-semibold">{{ tvShow.name }}</h3>
						<p class="text-sm text-gray-400 mt-2">{{ tvShow.overview|slice(0, 150) ~ '...' }}</p>
					</div>
				</div>
			{% else %}
				<p>Aucune série trouvée.</p>
			{% endfor %}
		</div>


	{% endblock %}
