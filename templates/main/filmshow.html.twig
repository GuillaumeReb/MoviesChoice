{% extends 'base.html.twig' %}

{% block title %}
	{{ movie.title }}
{% endblock %}

{% block body %}
	<div class="container mx-auto p-6">
		<div class="bg-white text-gray-900 rounded-xl shadow-lg p-6 flex flex-col md:flex-row gap-6 items-start">
			<!-- Image réduite -->
			{# <img src="https://image.tmdb.org/t/p/original{{ movie.poster_path }}" alt="{{ movie.title }}" class="w-40 md:w-48 max-h-72 flex-shrink-0 rounded-lg shadow-md object-cover"> #}


				<div class="p-4 bg-gray-100"> <img src="https://image.tmdb.org/t/p/original{{ movie.poster_path }}" alt="{{ movie.title }}" class="w-40 rounded-lg shadow-md object-cover">
			</div>

			<!-- Texte -->
			<div class="flex-1">
				<h1 class="text-4xl font-extrabold text-gray-900 mb-3 border-b-4 border-red-600 pb-2 tracking-wide">
					{{ movie.title }}
				</h1>

				{% if movie.tagline %}
					<p class="text-xl italic text-red-600 mb-6 tracking-wide drop-shadow-sm">
						“{{ movie.tagline }}”
					</p>
				{% endif %}

				<ul class="space-y-3 text-gray-700 font-medium text-base md:text-lg mb-6">
					<li>
						<strong class="text-gray-900">Date de sortie :</strong>
						{{ movie.release_date }}</li>
					<li>
						<strong class="text-gray-900">Note :</strong>
						<span class="inline-block px-3 py-1 bg-yellow-300 text-yellow-900 rounded-full font-bold">
							{{ movie.vote_average }}/10
						</span>
					</li>
				</ul>

				<p class="text-gray-800 text-justify leading-relaxed text-lg">
					{{ movie.overview }}
				</p>
			</div>
		</div>
	</div>
{% endblock %}
